<!-- res/drawable/block_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed for more or less rounding -->
            <solid android:color="#567890" /> <!-- Color when pressed -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed for more or less rounding -->
            <solid android:color="#345678" /> <!-- Default color -->
        </shape>
    </item>
</selector>